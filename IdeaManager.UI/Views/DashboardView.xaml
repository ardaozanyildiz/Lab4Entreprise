<Page x:Class="IdeaManager.UI.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:IdeaManager.UI.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardView"
      Background="SkyBlue">

    <DockPanel>
        
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Width="710">
            <Button Content="Voir la liste des idées" Width="200" Height="50" Margin="100" Click="OnViewListClick"/>
            <Button Content="Proposer une idée" Width="200" Height="50" Margin="10" Click="OnSubmitIdeaClick"/>
        </StackPanel>

        
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Page>
